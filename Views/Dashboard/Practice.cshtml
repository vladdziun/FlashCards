@model List<Card>

<head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
</head>
<body>
        <div class = "header">
            <p class = "title">Practice @ViewBag.Category</p>
        </div>
        <div class ="navBar">
            <a href="/dashboard">Dashboard</a> | 
            <a href="/create/card">Manage Flashcards</a> | 
            <a href="/create/category">Manage Categories</a> | 
            <a href="/logout">Logout</a>
        </div>
    <div class = "mainContent animated rollIn">
        <div class = "mainContentWrapper">
            <p class = "cardFront animated flipInY">@ViewBag.Card.FrontText</p>
            <p class = "cardBack animated flipInY" style="display:none;">@ViewBag.Card.BackText</p>
        </div>
    </div>
    <div class = "buttonWrapper">
            <button class="btn btn-primary btn-lg" onclick="window.location.href = '/practice/@ViewBag.Id';">Next Card</button>
            <button class ="flipCard btn btn-info btn-lg">Flip Card</button>
    </div>

</body>