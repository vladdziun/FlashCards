@model List<Card>

<head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css"/>
<body>
        <div class = "header">
            <p class = "title">Practice</p>
        </div>
        <div class ="navBar">
    <a href="/create/card">Manage Flashcards</a> | 
    <a href="/create/category">Manage Categories</a> | 
        <a href="/logout">Logout</a>
    </div>
    <div class = "mainContent">
        <div class = "mainContentWrapper">
            <p class = "cardFront">@ViewBag.Card.FrontText</p>
            <p class = "cardBack" style="display:none;">@ViewBag.Card.BackText</p>
        </div>
    </div>
    <div class = "buttonWrapper">
            <button class="btn btn-primary btn-lg" onclick="window.location.href = '/practice/@ViewBag.Id';">Next Card</button>
            <button class ="flipCard btn btn-info btn-lg">Flip Card</button>
    </div>

</body>
</head>